{
	"compilerOptions": {
        "module": "esNext",
		"target": "es5",
		"moduleResolution": "node",
        "esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
		"preserveConstEnums":true,
		"sourceMap": true,
        "allowJs": true,
      "lib": [
        "dom",
        "es6",
        "scripthost",
        "es2020.promise"
      ]
    },
    "exclude": ["aws-cdk"],
    "include": ["src"]
}
